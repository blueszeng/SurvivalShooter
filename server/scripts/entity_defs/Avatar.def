<root>
	<Interfaces>
		<Interface>	EntityCommon		</Interface>
	</Interfaces>

	<Properties>
		<roomKey>
			<Type>		SPACE_KEY			</Type>
			<Flags>		BASE				</Flags>
			<Persistent>		true				</Persistent>
		</roomKey>

		<name>
			<Type>		UNICODE			</Type>
			<Flags>		ALL_CLIENTS			</Flags>
			<Persistent>		true				</Persistent>
			<DetailLevel>		MEDIUM			</DetailLevel>
		</name>

		<dbid>
			<Type>		DBID				</Type>
			<Flags>		CELL_PUBLIC			</Flags>
			<Default>		0				</Default>
		</dbid>

		<level> <!-- 毫克、克、千克、吨、万吨 -->
			<Type>		UINT8				</Type>
			<Flags>		OWN_CLIENT			</Flags>
			<Default>		1				</Default>
		</level>

		<moveSpeed>
			<Type>		FLOAT				</Type>
			<Flags>		ALL_CLIENTS			</Flags>
			<Default>		6.5				</Default>
		</moveSpeed>

		<modelScale>
			<Type>		FLOAT				</Type>
			<Flags>		ALL_CLIENTS			</Flags>
			<Default>		0.3				</Default>
		</modelScale>

		<state>
			<Type>		INT8				</Type> <!-- 为0时处于保护状态，1时可被吃 -->
			<Flags>		ALL_CLIENTS			</Flags>
			<Persistent>		true				</Persistent>
			<Default>		0				</Default>
		</state>
	</Properties>

	<ClientMethods>
        <updatePosition>
        <Arg>           FRAMEID               </Arg>
        <Arg>           POSITION3D                </Arg>
    	</updatePosition>

    	<updateDirection>
        <Arg>           FRAMEID               </Arg>
        <Arg>           DIRECTION3D                </Arg>
    	</updateDirection>
	</ClientMethods>

	<BaseMethods>
		<createCell>
			<Arg>		ENTITYCALL					</Arg>
			<Arg>		SPACE_KEY					</Arg>
		</createCell>
	</BaseMethods>

	<CellMethods>
		<reqPosition>
            <Exposed/>
            <Arg>       FRAMEID        </Arg>
            <Arg>       POSITION3D      </Arg>
        </reqPosition>

       	<reqDirection>
            <Exposed/>
            <Arg>       FRAMEID        </Arg>
            <Arg>       DIRECTION3D      </Arg>
        </reqDirection>
	</CellMethods>

</root>
